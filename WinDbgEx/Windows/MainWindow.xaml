<metro:MetroWindow x:Class="WinDbgEx.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinDbgEx"
                   xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                   xmlns:view="clr-namespace:WinDbgEx.Views"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls" SaveWindowPosition="True"
                   
        mc:Ignorable="d"
        Title="{Binding Title}" MinHeight="350" MinWidth="525" BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush}" TitleCaps="False"
                   >
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Activated">
            <i:InvokeCommandAction Command="{Binding ActivateCommand}" CommandParameter="{Binding AppManager}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <view:MainView x:Name="MainView">

    </view:MainView>
</metro:MetroWindow>
